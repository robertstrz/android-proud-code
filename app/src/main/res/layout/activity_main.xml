<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/holo_blue_light"
    android:clipChildren="false"
    android:clipToPadding="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center">

        <View
            android:id="@+id/circle_item_1"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:background="@drawable/circle_logo_element" />

        <View
            android:id="@+id/circle_item_2"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/circle_item_1"
            android:background="@drawable/circle_logo_element" />

        <View
            android:id="@+id/circle_item_3"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/circle_item_2"
            android:background="@drawable/circle_logo_element" />

        <View
            android:id="@+id/circle_item_4"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_below="@id/circle_item_1"
            android:layout_marginTop="2dp"
            android:background="@drawable/circle_logo_element" />

        <View
            android:id="@+id/circle_item_5"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_below="@id/circle_item_2"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/circle_item_4"
            android:background="@drawable/circle_logo_element" />

        <View
            android:id="@+id/circle_item_6"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_below="@id/circle_item_3"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/circle_item_5"
            android:background="@drawable/circle_logo_element" />

        <View
            android:id="@+id/circle_item_7"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_below="@id/circle_item_4"
            android:layout_marginTop="2dp"
            android:background="@drawable/circle_logo_element" />

        <View
            android:id="@+id/circle_item_8"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_below="@id/circle_item_5"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/circle_item_7"
            android:background="@drawable/circle_logo_element" />

        <View
            android:id="@+id/circle_item_9"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_below="@id/circle_item_6"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/circle_item_8"
            android:background="@drawable/circle_logo_element" />

        <View
            android:id="@+id/circle_item_10"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_below="@id/circle_item_9"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/circle_logo_element" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/rounded_score"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:scaleX="0"
        android:scaleY="0"
        android:src="@drawable/white_circular_backgorund" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_gravity="center"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/circular_progress" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star_one"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/start_shining_anim"
                android:rotation="-144"
                android:scaleX="0"
                android:scaleY="0" />

            <ImageView
                android:id="@+id/star_two"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/start_shining_anim"
                android:rotation="-144"
                android:scaleX="0"
                android:scaleY="0" />

            <ImageView
                android:id="@+id/star_three"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/start_shining_anim"
                android:rotation="-144"
                android:scaleX="0"
                android:scaleY="0" />
        </LinearLayout>

        <TextView
            android:id="@+id/score_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0"
            android:scaleY="0"
            android:text="125"
            android:textColor="#505871"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/points_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0"
            android:scaleY="0"
            android:text="Points"
            android:textColor="#505871" />

    </LinearLayout>

</FrameLayout>